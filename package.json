{
  "name": "toply",
  "description": "Toply is a web app for retrieve and showing your favourite artists and songs from Spotify.",
  "version": "0.0.2",
  "repository": {
    "url": "https://github.com/faustinozanetto/toply",
    "type": "git"
  },
  "keywords": [
    "toply",
    "spotify",
    "music",
    "artists",
    "songs"
  ],
  "author": {
    "name": "Faustino Zanetto",
    "email": "zanettofaustino@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "start:dev": "next",
    "start:prod": "next start",
    "build": "next build",
    "docker:build": "docker build -t faustizanetto/toply:latest .",
    "docker:run": "docker-compose up",
    "docker:start": "docker run -p 3000:3000 -e NODE_ENV=development faustizanetto/toply:latest",
    "test": "jest --no-cache",
    "test:coverage": "jest --coverage --no-cache",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test-watch": "jest --watch",
    "eslint": "next lint --fix --dir src",
    "prettier": "prettier -l \"src/**/*.{js,jsx,md,ts,tsx}\"",
    "lint": "yarn prettier && yarn eslint"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fontsource/poppins": "^4.5.9",
    "@headlessui/react": "^1.7.2",
    "@reduxjs/toolkit": "^1.8.5",
    "cssnano": "^5.1.13",
    "framer-motion": "^7.3.5",
    "html-to-image": "^1.10.8",
    "install": "^0.13.0",
    "next": "^12.3.0",
    "next-auth": "4.10.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga": "^3.3.1",
    "react-gtm-module": "^2.0.11",
    "react-redux": "^8.0.2",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "29.0.2",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-gtm-module": "^2.0.1",
    "@types/react-redux": "^7.1.24",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "autoprefixer": "^10.4.11",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-tailwindcss": "^3.6.1",
    "eslint-plugin-testing-library": "^5.6.4",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.0.3",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
